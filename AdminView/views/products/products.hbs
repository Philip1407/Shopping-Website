<!DOCTYPE html>
<html>
 <style>
    .btn-add{
     background-color: rgb(181, 218, 205);
     margin-right: 0%;
   }
    .btn{
	  margin-left:10px;
   }
  
 </style>
 <div class="card-header d-flex align-items-center">
                      <div class="col-sm-6 ">
                        <h3 class="h4">{{cattitle}} {{categoryName}} </h3>
                      </div>
                      <div class="col-sm-6 d-flex text-right">
                        <form class="row m-l-200">
                          <button class="btn-add m-l-400" formaction="/products/create"><i class="far fa-plus-square"></i></button>
                          <h6 class="m-l-10 m-t-3">Thêm sản phẩm</h6>
                        </form>
                      </div>
  </div>
  <div class="card-body">
          <table class="table table-striped table-bordered">
                          <thead>
                            <tr>
                              <th style="width:5%">STT</th>
                              <th style="width:20%">Tên sản phẩm</th>
                              <th style="width:15%">Số sản phẩm hiện có</th>
                              <th style="width:40%">Mô tả</th>
                              <th style="width:20%">Xử lý</th>
                            </tr>
                          </thead>
                          {{#each list_products}}
                              <tr>
                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.amount}}</td>
                                <td>{{this.description}}</td>
                                <td>
                                  <div class="row button">
                                    <form>
                                      <button class="btn" formaction="/products/delete/{{this._id}}"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                    <form>
                                      <button class="btn" formaction="/products/update/{{this._id}}"><i class="far fa-edit"></i></button>
                                    </form>
                                    <form>
                                      <button class="btn" formaction="/products/detail/{{this._id}}"><i class="fa fa-info-circle"></i></button>
                                    </form>
                                  </div>
                                </td>
                              </tr>
                            
                          {{/each}}
          </table>
  </div>
</html>
