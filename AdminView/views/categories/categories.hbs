<!DOCTYPE html>
<html>
 <style>
    .btn-add{
     background-color: rgb(181, 218, 205);
     margin-right: 0%;
   }
    .btn{
	  margin-left:10px;
   }
  
 </style>
 <div class="card-header d-flex align-items-center">
                      <div class="col-sm-6 ">
                       <h3 class="h4">Các Loại Sản Phẩm</h3>
                      </div>
                      <div class="col-sm-6 d-flex">
                        <form>
                          <button class="btn-add" formaction="/categories/create"><i class="far fa-plus-square"></i></button>
                        </form>
                      </div>
    </div>
      <div class="card-body">
       
          <table class="table table-striped table-bordered">
                          <thead>
                            <tr>
                              <th>STT</th>
                              <th>Loại sản phẩm</th>
                              <th>Số sản phẩm hiện có</th>
                              <th>Xử lý</th>
                            </tr>
                          </thead>
                          {{#each list_categories}}
                              <tr>
                                <th scope="row">1</th>
                                <td>{{this.name}}</td>
                                <td>{{this.amount}}</td>
                                <td>
                                  <div class="row button">
                                    <form>
                                      <button class="btn" formaction="/categories/delete/{{this._id}}"><i class="far fa-trash-alt"></i></button>
                                    </form>
                                    <form>
                                      <button class="btn" formaction="/categories/update/{{this._id}}"><i class="far fa-edit"></i></button>
                                    </form>
                                    <form>
                                      <button class="btn" formaction="/products/category/{{this._id}}"><i class="fa fa-list-ul"></i></button>
                                    </form>
                                  </div>
                                </td>
                              </tr>
                            
                          {{/each}}
          </table>
        </div>
</html>
