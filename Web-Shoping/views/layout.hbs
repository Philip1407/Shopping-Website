	<script>
		$('.js-cost').each(function(){
			var coststring='';
			var cost=$(this).text();
			var temp;
			while(cost>=1){
				if(cost<1000){
					temp=Math.floor(cost);
				}else{
					temp=cost%1000;
					if(temp<10){
						temp+="00";
					}else if(temp<100){
						temp+="0";
					}
				}
				if(coststring==''){
					coststring+=temp;
				}else{
					coststring=temp+"."+coststring;
				}
				cost/=1000;
			}
			coststring+=" VND";
			$(this).text(coststring);
		})
	</script>	
